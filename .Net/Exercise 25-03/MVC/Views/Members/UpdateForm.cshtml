@model MVC.Models.Member

@{
    ViewData["Title"] = "Update";
}
<h1>Update Member</h1>
<form asp-action="Update">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input type="text" asp-for="FirstName" class="form-control" id="FirstName" value="@Model.FirstName">
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input type="text" asp-for="LastName" class="form-control" id="LastName" value="@Model.LastName">
    </div>
    <div class="form-group">
        <label asp-for="Gender">Gender</label>
        <input type="text" asp-for="Gender" class="form-control" id="Gender" value="@Model.Gender">
    </div>
    <div class="form-group">
        <label asp-for="DOB">Date Of Birth</label>
        <input type="date" asp-for="DOB" class="form-control" id="DOB" value="@Model.DOB">
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" id="PhoneNumber" value="@Model.PhoneNumber">
    </div>
    <div class="form-group">
        <label asp-for="BirthPlace">Birth Place</label>
        <input type="text" asp-for="BirthPlace" class="form-control" id="BirthPlace" value="@Model.BirthPlace">
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input type="date" asp-for="StartDate" class="form-control" id="StartDate" value="@Model.StartDate">
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input type="date" asp-for="EndDate" class="form-control" id="EndDate" value="@Model.EndDate">
    </div>
    <input type="text" name="index" value="@(ViewBag.Index)" class="form-control" hidden>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>