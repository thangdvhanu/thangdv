@model MVC.Models.Member
@{
    ViewData["Title"] = "Delete";
}

@Html.ActionLink("Return to List Member", "Index", "Members")
</hr>
<h1 style="color: red;">This action can not be undone.</h1>
<h2>Do you want to delete this member?</h2>
<h3>Name: @Model.FirstName @Model.LastName</h3>
<form asp-action="Delete">
    <button name="index" value="@(ViewBag.MemberIndexToDelete)" type="submit" class="btn btn-primary">Confirm</button>
    <button name="index" value="" type="submit" class="btn btn-primary">Cancel</button>
</form>