@model MVC.Models.Member

@{
    ViewData["Title"] = "Create";
}
<h1>Add New Member</h1>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input type="text" asp-for="FirstName" class="form-control" id="FirstName" placeholder="Enter First Name">
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input type="text" asp-for="LastName" class="form-control" id="LastName" placeholder="Enter Last Name">
    </div>
    <div class="form-group">
        <label asp-for="Gender">Gender</label>
        <input type="text" asp-for="Gender" class="form-control" id="Gender" placeholder="Enter Gender">
    </div>
    <div class="form-group">
        <label asp-for="DOB">Date Of Birth</label>
        <input type="date" asp-for="DOB" class="form-control" id="DOB">
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input type="number" asp-for="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Enter Phone Number">
    </div>
    <div class="form-group">
        <label asp-for="BirthPlace">Birth Place</label>
        <input type="text" asp-for="BirthPlace" class="form-control" id="BirthPlace" placeholder="Enter Birth Place">
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input type="date" asp-for="StartDate" class="form-control" id="StartDate">
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input type="date" asp-for="EndDate" class="form-control" id="EndDate">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>